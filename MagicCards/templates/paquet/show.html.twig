{% extends 'base.html.twig' %}

{% block title %}Paquet{% endblock %}

{% block body %}
    <h1>Paquet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ paquet.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ paquet.description }}</td>
            </tr>
            <tr>
